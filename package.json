{
  "name": "decap-cloudflare-git-gateway-auth",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "build": "vite build --mode client && vite build",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "deploy": "$npm_execpath run build && wrangler deploy --no-bundle",
    "dev": "vite",
    "lint": "eslint src types vitest",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.38.0",
    "drizzle-zod": "^0.6.0",
    "hono": "^4.6.13",
    "typed-htmx": "^0.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.38",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@faker-js/faker": "^9.3.0",
    "@hono/eslint-config": "^1.0.2",
    "@hono/vite-build": "^1.1.1",
    "@hono/vite-dev-server": "^0.17.0",
    "@types/node": "^22.10.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.0",
    "drizzle-seed": "^0.1.3",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-checker": "^0.8.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.93.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
